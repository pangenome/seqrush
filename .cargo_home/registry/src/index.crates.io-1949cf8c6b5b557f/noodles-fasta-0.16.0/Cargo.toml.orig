[package]
name = "noodles-fasta"
version = "0.16.0"
authors = ["Michael Macias <zaeleus@gmail.com>"]
license = "MIT"
edition = "2021"
rust-version = "1.57.0"
description = "FASTA format reader and writer"
homepage = "https://github.com/zaeleus/noodles"
repository = "https://github.com/zaeleus/noodles"
documentation = "https://docs.rs/noodles-fasta"

[features]
async = ["tokio"]

[dependencies]
bytes = "1.0.1"
memchr = "2.3.3"
noodles-bgzf = { path = "../noodles-bgzf", version = "0.17.0" }
noodles-core = { path = "../noodles-core", version = "0.9.0" }

tokio = { version = "1.10.0", optional = true, features = ["io-util"] }

[dev-dependencies]
tokio = { version = "1.10.0", features = ["macros", "rt-multi-thread"] }

[package.metadata.docs.rs]
features = ["async"]
